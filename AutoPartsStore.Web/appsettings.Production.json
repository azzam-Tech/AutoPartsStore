{
  "EnableSwagger": true,
  "SwaggerAuthKey": "AutoPartsStore_Swagger_Secret_Key_2025!@#$%",

  "ConnectionStrings": {
    "DefaultConnection": "Server=MONSTERASP_SQL_SERVER;Database=AutoPartsStoreDb;User Id=YOUR_DB_USERNAME;Password=YOUR_STRONG_PASSWORD;TrustServerCertificate=true;MultipleActiveResultSets=true;Connect Timeout=30;"
  },

  "Jwt": {
    "Key": "AutoPartsStore_Production_Jwt_Secret_2025!@#$%^&*()_+{}:<>?|~`1234567890",
    "Issuer": "AutoPartsStore.Api",
    "Audience": "AutoPartsStore.Client",
    "ExpiryInHours": 1
  },

  "EmergencySettings": {
    "AdminKey": "AutoPartsStore_Production_Emergency_2025!@#$%^&*()_+{}:<>?"
  },

  "DatabaseSettings": {
    "MaxRetryCount": 5,
    "CommandTimeout": 30,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging": "Warning",
      "Microsoft.AspNetCore.Mvc": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Query": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "File": {
      "Path": "logs/autopartsstore-{Date}.log",
      "LogLevel": {
        "Default": "Warning"
      },
      "FileSizeLimit": 10485760,
      "RetainedFileCountLimit": 5
    }
  },

  "AllowedHosts": "*",

  "DetailedErrors": false,

  "EnableSensitiveDataLogging": false,


  "RateLimiting": {
    "PermitLimit": 100,
    "Window": 60,
    "QueueLimit": 10
  },



  "Compression": {
    "EnableForHttps": true,
    "MimeTypes": [
      "application/json",
      "application/xml",
      "text/plain",
      "text/html",
      "text/css",
      "application/javascript"
    ]
  }
}